# ============================================
# Terraform .gitignore
# ============================================

# Local .terraform directories
.terraform/
.terraform.lock.hcl

# Terraform state files
*.tfstate
*.tfstate.*
*.tfstate.backup

# Crash log files
crash.log
crash.*.log

# Sensitive variable files
*.tfvars
!terraform.tfvars.example

# Override files
override.tf
override.tf.json
*_override.tf
*_override.tf.json

# CLI configuration files
.terraformrc
terraform.rc

# Plan files
*.tfplan
plan.out

# Ignore any .pem files
*.pem

# Ignore credentials files
credentials.json
*.credentials

# IDE files
.idea/
*.iml
.vscode/
*.code-workspace

# OS files
.DS_Store
Thumbs.db
