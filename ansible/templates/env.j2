# ============================================
# Environment Configuration Template
# DevOps Lab Exam - Node-Redis-Mongo Project
# ============================================

# Application Settings
NODE_ENV={{ environment | default('production') }}
PORT={{ app_port | default(5000) }}
APP_NAME={{ app_name | default('node-redis-mongo') }}

# MongoDB Configuration
MONGO_URI=mongodb://{{ mongodb_host | default('mongodb') }}:{{ mongodb_port | default(27017) }}/{{ mongodb_database | default('nodeapp') }}
MONGO_DB_NAME={{ mongodb_database | default('nodeapp') }}

# Redis Configuration  
REDIS_HOST={{ redis_host | default('redis') }}
REDIS_PORT={{ redis_port | default(6379) }}
REDIS_PASSWORD={{ redis_password | default('') }}

# Logging Configuration
LOG_LEVEL={{ log_level | default('info') }}
LOG_FORMAT={{ log_format | default('json') }}

# Security Settings
JWT_SECRET={{ jwt_secret | default('change-me-in-production') }}
CORS_ORIGIN={{ cors_origin | default('*') }}

# Monitoring
METRICS_ENABLED={{ metrics_enabled | default('true') }}
METRICS_PORT={{ metrics_port | default(9090) }}

# Health Check
HEALTH_CHECK_PATH=/api/health
